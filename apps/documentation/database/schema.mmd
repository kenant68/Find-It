erDiagram
    USERS {
        int id PK
        varchar username
        varchar email
        varchar password_hash
        varchar avatar_url
        varchar faceit_id
        varchar faceit_level
        varchar steam_url
        varchar discord_username
        varchar region
        timestamp created_at
        timestamp updated_at
    }

    TEAMS {
        int id PK
        varchar name
        varchar logo_url
        varchar banner_url
        int captain_id FK
        int elo_avg
        varchar region
        timestamp created_at
        timestamp updated_at
    }

    TEAM_MEMBERS {
        int id PK
        int team_id FK
        int user_id FK
        timestamp joined_at
        varchar role
        boolean is_leader
    }

    MAPS {
        int id PK
        varchar name
        varchar image_url
    }

    SCRIMS {
        int id PK
        int team_a_id FK
        int team_b_id FK
        int map_id FK
        int elo_min
        int elo_max
        timestamp date
        varchar horaire
        timestamp created_at
        timestamp updated_at
    }

    MATCHES {
        int id PK
        int team_a_id FK
        int team_b_id FK
        int score_a
        int score_b
        int map_id FK
        timestamp played_at
        timestamp created_at
    }

    FACEIT_STATS {
        int id PK
        int user_id FK
        int elo
        int matches_played
        int wins
        decimal win_rate
        int winstreak
        varchar recent_matches
        decimal average_headshots
        decimal average_K_D
        varchar fav_map
        decimal fav_map_win_rate
        varchar fav_side
        timestamp last_update
    }

    NOTIFICATIONS {
        int id PK
        varchar type
        varchar title
        varchar subtitle
        varchar timestamp
        int user_id FK
        timestamp created_at
    }

    SCRIM_ANNOUNCEMENTS {
        int id PK
        int team_id FK
        varchar team_name
        varchar timestamp
        timestamp created_at
    }

